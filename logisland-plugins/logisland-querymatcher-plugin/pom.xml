<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd
http://www.w3.org/2001/XMLSchema-instance ">
    <modelVersion>4.0.0</modelVersion>


    <parent>
        <groupId>com.hurence.logisland</groupId>
        <artifactId>logisland-plugins</artifactId>
        <version>0.10.0-SNAPSHOT</version>
    </parent>

    <packaging>jar</packaging>
    <artifactId>logisland-querymatcher-plugin</artifactId>

    <dependencies>
        <dependency>
            <groupId>com.hurence.logisland</groupId>
            <artifactId>logisland-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.hurence.logisland</groupId>
            <artifactId>logisland-utils</artifactId>
        </dependency>

        <dependency>
            <groupId>com.github.flaxsearch</groupId>
            <artifactId>luwak</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>


        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-queries</artifactId>
            <version>5.4.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.immutables.tools</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <excludes>
                                    <exclude>com.hurence.logisland:logisland-utils</exclude>
                                    <exclude>com.hurence.logisland:logisland-api</exclude>
                                </excludes>
                                <includes>
                                    <include>*:*</include>
                                </includes>
                            </artifactSet>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer"/>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                            </transformers>
                            <relocations>

                                <relocation>
                                    <pattern>com.github</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.github</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>io</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.io</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>jline</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.jline</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>javax</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.javax</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>javassist</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.javassist</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>joda-time</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.joda-time</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.google</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.spatial4j</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.spatial4j</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.fasterxml</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.fasterxml</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.carrotsearch</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.carrotsearch</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.twitter</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.twitter</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.tdunning</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.tdunning</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.thoughtworks</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.thoughtworks</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.esotericsoftware</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.esotericsoftware</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.ning</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.ning</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.sun</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.com.sun</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.org</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>uk</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.uk</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>ch</pattern>
                                    <shadedPattern>shaded.logisland.querymatcher.ch</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>